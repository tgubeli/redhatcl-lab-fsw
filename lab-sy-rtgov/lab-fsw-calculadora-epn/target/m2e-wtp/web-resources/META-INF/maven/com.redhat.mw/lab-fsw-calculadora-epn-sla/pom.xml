	<artifactId>lab-fsw-calculadora-epn-sla</artifactId> 
	<packaging>war</packaging>
	<version>1.0</version>
	<properties>
		<switchyard.version>1.1.1-p5-redhat-1</switchyard.version>
		<rtgov.version>1.0.1.Final-redhat-4</rtgov.version>
